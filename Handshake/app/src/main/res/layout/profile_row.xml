<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_height="48dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/platform_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription"
            android:src="@drawable/facebook_icon"/>
        <TextView
            android:id="@+id/platform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/platform_image"
            android:layout_toEndOf="@id/platform_image"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="Facebook"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/account_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/platform_name"
            android:layout_toEndOf="@id/platform_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="userId"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/platform_enabled_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:textOff="Off"
            android:textOn="On"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
